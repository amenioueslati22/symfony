<!DOCTYPE html>
<html>
<head>
    <title>Authors List</title>
</head>
<body>
    <h1>Authors List</h1>

    <a href="{{ path('add_author_form') }}">Add New Author</a>

    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Age</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for author in list %}
                <tr>
                    <td>{{ author.id }}</td>
                    <td>{{ author.username }}</td>
                    <td>{{ author.email }}</td>
                    <td>{{ author.age }}</td>
                    <td>
                        <a href="{{ path('delete_author', {'id': author.id}) }}" onclick="return confirm('Are you sure you want to delete this author?')">Delete</a>
                        <a href="{{ path('edit_author', {'id': author.id}) }}">Update</a>
                        <a href="{{ path('show_author_details', {'id': author.id}) }}">Show</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" style="text-align: center;">No authors found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% for message in app.flashes('success') %}
        <div>{{ message }}</div>
    {% endfor %}
</body>
</html>