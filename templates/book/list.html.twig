{% extends 'base.html.twig' %}

{% block title %}Books List{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Books List</h1>

    {# Search Form #}
    <div class="mb-3">
        <form method="get" action="{{ path('app_book_list') }}" class="form-inline">
            <div class="input-group">
                <input type="text" name="search_ref" class="form-control" 
                       placeholder="Search by reference..." value="{{ search_ref ?? '' }}">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Search</button>
                    {% if search_ref %}
                        <a href="{{ path('app_book_list') }}" class="btn btn-secondary">Clear</a>
                    {% endif %}
                </div>
            </div>
        </form>
    </div>

    {# Action Buttons #}
    <div class="mb-3">
        <a href="{{ path('app_book_add') }}" class="btn btn-primary">Add New Book</a>
        <a href="{{ path('app_books_by_authors') }}" class="btn btn-info">Books by Authors</a>
        <a href="{{ path('app_books_productive_authors') }}" class="btn btn-success">Books Before 2023 (10+ Books Authors)</a>
        <a href="{{ path('app_books_update_categories') }}" class="btn btn-warning" 
           onclick="return confirm('Are you sure you want to update all Science-Fiction books to Romance?');">
            Update Science-Fiction to Romance
        </a>
    </div>

    {# Books List - Matching PDF Table Structure #}
    {% if books|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Title</th>
                        <th>PublicationDate</th>
                        <th>Published</th>
                        <th>Category</th>
                        <th>Author</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for book in books %}
                        <tr>
                            <td>{{ book.title }}</td>
                            <td>{{ book.publicationDate|date('F d, Y') }}</td>
                            <td>{{ book.published ? '1' : '0' }}</td>
                            <td>{{ book.category }}</td>
                            <td>{{ book.author.username }}</td>
                            <td>
                                <a href="{{ path('app_book_show', {'id': book.id}) }}" class="btn btn-sm btn-info">show</a>
                                <a href="{{ path('app_book_edit', {'id': book.id}) }}" class="btn btn-sm btn-warning">edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="alert alert-warning text-center">
            <h4>No Books found</h4>
            {% if search_ref %}
                <p>No book found with reference "{{ search_ref }}".</p>
                <a href="{{ path('app_book_list') }}" class="btn btn-primary">Show all books</a>
            {% else %}
                <p>There are no published books to display.</p>
                <a href="{{ path('app_book_add') }}" class="btn btn-primary">Add the first book</a>
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}